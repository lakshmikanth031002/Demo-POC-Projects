<mvc:View controllerName="ladera.mobiles.controller.LoginPage"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:layout="sap.ui.layout"
    xmlns="sap.m">
    <Page id="page" title="Royal Enfield" showHeader="false" class="LoginPageclass">
    <HBox height="100%" class="loginContainer" >
                <VBox class="imagePane" alignContent="Center" justifyContent="Center" width="695px">
                    <Text text="LADERA MOBILES" class="companyText"/>
                </VBox>
                <VBox class="loginPane" width="250px">
                    <Panel class="loginForm" backgroundDesign="Transparent">
                        <HBox justifyContent="Center">
                        <Title class="tittle"
                            text="Welcome"
                            level="H4"
                            titleStyle="H4"
                            textAlign="Center"/>
                        </HBox>
                        <Input
                            id="usernameInput"
                            placeholder="Enter username or email"
                            width="100%"
                            class="sapUiSmallMarginBottom"/>
                        <Input
                            id="passwordInput"
                            type="Password"
                            placeholder="Enter password"
                            width="100%"
                            class="sapUiSmallMarginBottom"/>
                        <CheckBox
                            text="Show Password"
                            select=".onShowPassword"
                            class="sapUiSmallMarginBottom"/>
                        <HBox alignContent="Center" justifyContent="Center">
                        <Button
                            text="Log In"
                            type="Emphasized"
                            width="100px"
                            press="onLoginPress"
                            class="sapUiSmallMarginBottom"/>
                        </HBox>
                        <Link
                            text="Forgot Password?"
                            href="#"
                            textAlign="Center"/>
                    </Panel>
                </VBox>
    </HBox>  
    </Page>
</mvc:View>