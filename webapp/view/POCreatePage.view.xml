<mvc:View
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m"
  xmlns:core="sap.ui.core"
  controllerName="ladera.mobiles.controller.POCreatePage"
  displayBlock="true">

  <Page title="Create New Purchase Order" showHeader="true">
    
    <!-- Header Section -->
    <VBox class="sapUiSmallMargin">
      <HBox>
        <VBox width="50%">
          <Label text="Purchase Type" />
          <Select selectedKey="nonVehicle">
            <items>
              <core:Item key="nonVehicle" text="Non Vehicle" />
              <core:Item key="vehicle" text="Vehicle" />
            </items>
          </Select>
        </VBox>

        <VBox width="50%">
          <Label text="Payment Type" />
          <Select>
            <items>
              <core:Item text="Order using WF" />
              <core:Item text="Order using Credit" />
            </items>
          </Select>
        </VBox>
      </HBox>

      <HBox>
        <VBox width="50%">
          <Label text="Dealer No." />
          <Input value="11" />
        </VBox>

        <VBox width="50%">
          <Label text="PO Ref Date" />
          <DatePicker valueFormat="yyyy-MM-dd" displayFormat="dd/MM/yyyy" />
        </VBox>
      </HBox>

      <Label text="Ship To Party" class="sapUiSmallMarginTop"/>
      <Input value="A & M Motorcycles Ltd" />

      <Label text="Address" />
      <Text text="1, Diamond Industrial Centre, Work, Letchworth Garden City, SG6 1LW" />
    </VBox>

    <!-- Table Section -->
    <VBox class="sapUiSmallMarginTop">
      <Toolbar>
        <Title text="SEQ" level="H4"/>
        <ToolbarSpacer />
        <Button icon="sap-icon://add" press="onAddRow"/>
      </Toolbar>

      <Table id="orderTable" items="{/OrderItems}">
        <columns>
          <Column><Text text="Seq" /></Column>
          <Column><Text text="Part" /></Column>
          <Column><Text text="Quantity" /></Column>
          <Column><Text text="In Stock" /></Column>
          <Column><Text text="ETA" /></Column>
          <Column><Text text="MSRP" /></Column>
        </columns>

        <items>
          <ColumnListItem>
            <cells>
              <Text text="{Seq}" />
              <Input value="{Part}" />
              <Input value="{Quantity}" type="Number" />
              <Text text="{InStock}" />
              <Text text="{ETA}" />
              <Text text="{MSRP}" />
            </cells>
          </ColumnListItem>
        </items>
      </Table>
    </VBox>

  </Page>
</mvc:View>
