<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<ResponsivePopover
		id="addToCartPopover"
		title="Add to Cart"
		class="sapUiContentPadding"
		placement="Bottom" >
		<beginButton>
			<Button text="Add to Cart" press="onAddToCartPress" />
		</beginButton>
		<endButton>
			<Button text="Cancel" press="onAddToCartCancelPress" />
		</endButton>
		<content>
			<VBox width="500px">
				<HBox class="inbox" width="270px">
					<Text class="inbox" text="Product Name:" width="100px" textAlign="End"/>
					<Text id="productNameText" class="inbox" text="{}" width="150px" textAlign="Begin"/>
				</HBox>
				<HBox class="inbox" width="270px">
                    <Text class="inbox" text="Varient:" width="100px" textAlign="End"/>
					<Text id="variantText" class="inbox" text="{}" width="150px" textAlign="Begin"/>
                </HBox>
				<HBox class="inbox" width="270px">
					<Text class="inbox" text="Price:" width="100px" textAlign="End"/>
					<Text id="productPriceText" class="inbox" text="{}" width="150px" textAlign="Begin"/>
				</HBox>
				<HBox class="inbox" width="270px">
					<Text class="inbox" text="Quantity:" width="100px" textAlign="End"/>
                	<Input id="quantityInput" type="Number" value="" width="3rem" textAlign="Center" editable="true"/>
                </HBox>
			</VBox>
		</content>
	</ResponsivePopover>
</core:FragmentDefinition>