<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
    <Dialog
        title="Select Comparison Product"
        id="valueHelpDialog"
        afterClose="onValueHelpClose"
        draggable="true"
        resizable="true">
        <Toolbar>
            <content>
            <Title text="Product Name"/>
            <SearchField width="20%" liveChange="onSearchProduct"/> 
            </content>

         </Toolbar>
        <Table id="productTable" items="{/products}" mode="SingleSelectMaster">
    <columns>
        <Column><Text text="Mobile" /></Column>
        <Column><Text text="RAM" /></Column>
        <Column><Text text="Storage" /></Column>
    </columns>
    <items>
        <ColumnListItem>
            <cells>
                <Text text="{name}" />
                <Text text="{RAM}" />
                <Text text="{Storage}" />
            </cells>
        </ColumnListItem>
    </items>
</Table>

        
        <beginButton>
            <Button text="OK" press="onValueHelpOk" />
        </beginButton>
        <endButton>
            <Button text="Cancel" press="onValueHelpCancel" />
        </endButton>
    </Dialog>
</core:FragmentDefinition>
