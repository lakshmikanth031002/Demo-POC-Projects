<mvc:View controllerName="ladera.mobiles.controller.MainPage"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    displayBlock="true"
    xmlns="sap.m"
    height="100%">
    <Page class="MainPage" showNavButton="true" navButtonPress="onNavBack">
    <customHeader>
                    <Bar class="centerHeaderBar">
                        <contentLeft >
                            <Button class="menuButtons" icon="sap-icon://nav-back" press="onNavBackLoginPage"/>
                            <MenuButton class="menuButtons" icon="sap-icon://menu2">
                                <menu>
                                    <Menu class="menuButtons" itemSelected="onMenuAction">
                                        <MenuItem text="Purchase" icon="sap-icon://chalkboard">
                                            <items>
                                                <MenuItem text="Purchase Order Create" press="onPurchaseOrderCreate" />
                                                <MenuItem text="Catalogue Order" press="onPressCatalogOrder" />
                                                <MenuItem text="Order Below Despatch Limit" press="onPress" />
                                            <MenuItem text="Approved Purchase Order" press="onPress" />
                                            <MenuItem text="Order Summary List" press="onPress" />
                                            <MenuItem text="FOC,Demo and Warranty Order" press="onPress" />
                                        </items>
                                    </MenuItem>
                                    <MenuItem text="Finance" icon="sap-icon://customer-financial-fact-sheet">
                                        <items>
                                            <MenuItem text="square" icon="sap-icon://status-completed" />
                                        </items>
                                    </MenuItem>
                                    <MenuItem text="Warranty" icon="sap-icon://quality-issue">
                                        <items>
                                            <MenuItem text="sample" icon="sap-icon://status-completed" />
                                        </items>
                                    </MenuItem>
                                    <MenuItem text="Publications" icon="sap-icon://bus-public-transport">
                                        <items>
                                            <MenuItem text="sample 1" icon="sap-icon://status-completed" />
                                        </items>
                                    </MenuItem>
                                </Menu>
                            </menu>
                            </MenuButton>
                        <Image src="Images/Company Name.png" width="150px" height="40px"/>

                        </contentLeft>
                        <contentRight>
                            <Button class="menuButtons" icon="sap-icon://question-mark" type="Transparent" press="onUserMenuPress"/>
                            <Button class="menuButtons" icon="sap-icon://headset" type="Transparent" press="onUserMenuPress"/>
                        <MenuButton class="menuButtons" icon="sap-icon://person-placeholder">
				            <Menu>
					            <MenuItem text="Settings" icon="sap-icon://action-settings" press="onPress"/>
					            <MenuItem text="About" icon="sap-icon://high-priority" press="onPress" />
					            <MenuItem text="Sign Out" icon="sap-icon://log" press="onPress" />
				            </Menu>
		                </MenuButton>
                        </contentRight>
                    </Bar>
                </customHeader>
        <VBox>
            <HBox class="overlayHeader" alignContent="End" justifyContent="End">
                <Carousel id="bgCarousel" showPageIndicator="false" class="noBackground" height="552px">
                    <pages>
                        <Image src="Images/CarouselImages/CarouselImage5.jpg" width="100%" height="100%" alt="Image1"/>
                        <Image src="Images/CarouselImages/CarouselImage2.jpg" width="100%" height="100%" alt="Image2"/>
                        <Image src="Images/CarouselImages/CarouselImage3.jpg" width="100%" height="100%" alt="Image3"/>
                        <Image src="Images/CarouselImages/CarouselImage4.jpg" width="100%" height="100%" alt="Image4"/>
                        <Image src="Images/CarouselImages/CarouselImage1.jpg" width="100%" height="100%" alt="Image5"/>
                    </pages>
                </Carousel>
            </HBox>
        </VBox>
    </Page>
</mvc:View>